extends components/templates/layout
block scripts
  script(defer src='js/home.js')
block content
  include components/store/main-store
  section.hero#hero
    .hero__container
      h1.visually-hidden Лучшие предложения
      .hero__slider
        .swiper-wrapper
          each item in hero_list
            .swiper-slide.hero__slide(class="hero__slide-" + item.id)
              .container.hero__slide-container
                h2.title.hero__slide-title(class=(item.header_style ? "hero__slide-title--" + item.header_style : "")) !{item.header}
                button.btn-reset.btn.hero__slide-btn(aria-label=item.button)= item.button
        .hero__slider-pagination

  section.special-offers#special-offers
    .container.special-offers__container
      h2.title.special-offers__title Специальные предложения
      .special-offers__slider
        include components/swiper-navigation
        +swiper-navigation("special-offers__navigation")
        .swiper-wrapper
          include components/card
          each item in spec_offer_list
            +card("div", item, "special-offers__item swiper-slide" + (item.class ? " card" + item.class : ""), true)

  section.high-rating#high-rating
    .container.high-rating__container
      h2.title.high-rating__title Высокий рейтинг
      ul.list-reset.high-rating__items
        include components/store/catalog-store
        each item, index in product_list
          if (index < 8)
            +card("li", item, "high-rating__item")
      button.btn-reset.btn.high-rating__btn Смотреть больше товаров

  section.ad#ad
    .container.ad__container
      h2.title.ad__title Оксфорд 1950
      p.descr.ad__descr
          Новая коллекция изысканных кресел
      button.btn-reset.btn.ad__btn Ознакомиться

  section.category#category-section
    .container.category__container
      h2.title.category__title Топ категории
      ul.list-reset.category__items
        include components/category-card
        each item, index in category_list
          +category-card("li", item, "category__item")

  section.useful#useful
    .container.useful__container
      h2.title.useful__title Полезное
      .useful__slider
        +swiper-navigation("useful__navigation")
        .swiper-wrapper
          include components/useful-card
          each item in useful_list
            +useful-card(item, "useful__item swiper-slide", true)

  section.contacts
    .container.contacts__container
      h2.visually-hidden.contacts__title Контакты

      form.contacts__form.form(action="#")
        strong.contacts__form-title.title Мы&nbsp;всегда вам рады!
        p.contacts__form-descr.descr Безусловно, новая модель организационной деятельности в&nbsp;значительной степени обусловливает важность распределения внутренних резервов и&nbsp;ресурсов.

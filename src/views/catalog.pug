extends components/templates/layout
include components/card
block scripts
  script(defer src='js/catalog.js')
block content
  include components/store/catalog-store
  .container.catalog-grid
    include components/breadcrumbs
    +breadcrumbs(['Главная', 'Каталог', 'Диваны', 'Прямые диваны'])
    include components/aside
    section.catalog
      h2 Каталог
      .catalog__slider
        //include components/swiper-navigation
        //+swiper-navigation("special-offers__navigation")
        .swiper-wrapper
          each item in product_list
            +card("div", item, "swiper-slide catalog__item")

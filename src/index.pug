extends templates/layout.pug
block content
  section.hero#hero
    .container.hero__container
      h1.visually-hidden.hero__title Лучшие предложения
      .hero__slider
        .swiper-wrapper
          each item in hero_list
            .swiper-slide.hero__slide(class="hero__slide-" + item.id)
              h2.hero__slide-header= item.header
              button.btn-reset.btn.hero__slide-btn= item.button

  section.special-offers#special-offers
    .container.special-offers__container
      h2.title.special-offers__title Специальные предложения
      .special-offers__slider
        .swiper-wrapper
          include components/card
          each item in spec_offer_list
            +card("div", item, "special-offers__item swiper-slide", true)

  section.high-rating#high-rating
    .container.high-rating__container
      h2.title.high-rating__title Высокий рейтинг
      ul.list-reset.high-rating__items
        include components/category-card
        each item in product_list
          +card("li", item, "high-rating__item")

  section.ad#ad
    .container.ad__container
      h2.title.ad__title Оксфорд 1950
      p.descr.ad__descr Новая коллекция изысканных кресел
      button.btn-reset.btn.ad__btn Ознакомиться

  section.category#category
    .container.category__container
      h2.title.category__title Топ категории
      ul.list-reset.category__items
        each item in category_list
          +category-card("li", item, "category__item")

  section.useful#useful
    .container.useful__container
      h2.title.useful__title Полезное
      .useful__slider
        .swiper-wrapper
          include components/useful-card
          each item in useful_list
            +useful-card(item, "useful__item swiper-slide", true)

  section.contacts
    .container.contacts__container
      strong.contacts__title.title Мы&nbsp;всегда вам рады!
      p.contacts__descr.descr Безусловно, новая модель организационной деятельности в&nbsp;значительной степени обусловливает важность распределения внутренних резервов и&nbsp;ресурсов.

      form.contacts__form.form(action="https://postman-echo.com/post" method="post" autocomplete="off")
        label.form__input-label.contacts__form-label(for="name")
          span.visually-hidden Поле Введите фамилие, имя и отчество
          input.form__input#name(name="name" type="text" placeholder="Как вас зовут?" required)

        label.form__input-label.contacts__form-label(for="email")
          span.visually-hidden Поле Введите номер телефона
          input.form__input#phone(name="phone" type="phone" placeholder="Ваш телефон" required)

        label.form__input-label.contacts__form-label(for="email")
          span.visually-hidden Поле Введите адрес электронной почты
          input.form__input#email(name="e-mail" type="email" placeholder="Ваш e-mail" required)

        button.btn-reset.btn.form__btn.form__message-btn(type="submit" aria-label="Кнопка отправить форму") Отправить

        label.form__checkbox-input-label.contacts__form-label(for="agree")
          input.form__checkbox-input.form__checkbox-input--hide#agree(name="agree" type="checkbox")
          span.checkbox-icon Принимаю
          a.link пользовательское соглашение

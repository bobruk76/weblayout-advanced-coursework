/*header*/
.header
  &__container
    width 100%
  &__top
    padding-top: 14px
    padding-bottom: 14px
    display flex
    flex-wrap nowrap
    background-color color-alabaster
    &-items
      @extend .menu-right

  &__menu
    display flex
    &-items
      @extend .menu-right
  &__bottom
    display flex
    &-link
      width 41px
      height 28px
      background-image url("../img/sprite.svg#shopping_cart")
      background-repeat no-repeat
      background-position right center
      background-size contain



/*header*/
.header
  &__container
    width 100%

  &__top
    padding-top: 14px
    padding-bottom: 14px
    display flex
    flex-wrap nowrap
    background-color color-alabaster

    &-items
      @extend .menu-right

  &__menu
    display flex

    &-items
      @extend .menu-right

  &__bottom
    display flex

    &-link
      width 41px
      height 28px
      background-image url("../img/sprite.svg#shopping_cart")
      background-repeat no-repeat
      background-position right center
      background-size contain

/*hero*/
.hero
  &__slide
    &-first
      background-image url("../img/slide-1.webp")

    &-second
      background-image url("../img/slide-2.webp")

    &-third
      background-image url("../img/slide-3.webp")

/*ad*/
.ad
  &__container
    color color-straw
    width 100%
    background-image url("../img/ad-bg.webp")
    background-repeat no-repeat
    background-position center

  &__title
    font-family "Playfair Display", Verdana, sans-serif
    font-style normal
    font-weight 900
    font-size 60px
    line-height 120%

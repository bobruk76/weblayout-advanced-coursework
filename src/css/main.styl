/*header*/
.header
  &__container
    padding-bottom 32px
    width 100%
    max-width initial

  &__top
    padding-top 16px
    padding-bottom 6px
    background-color color-alabaster

    & .container
      padding-top 0
      display flex
      flex-wrap nowrap
      overflow initial

    &-label
      transition color .3s ease-in-out, background-color .3s ease-in-out

      &:hover .choices__inner
        color color-mauve

      &:focus
        background-color color-blue-chalk

      &:active .choices__inner
        color color-purple-heart

    &-form
      margin-right 2px

    &-phone
      transform translateY(-2px)

    &-items
      @extend .menu-right
      font-family 'Open Sans', Verdana, sans-serif
      font-style normal
      font-weight 400
      font-size 14px
      line-height 100%
      color color-dusty-gray

    &-item
      transition color .3s ease-in-out, background-color .3s ease-in-out

      &:not(:last-child)
        padding 3px 8px
        margin-right 48px

      &:last-child
        padding 3px 0 3px 8px

      &:hover
        color color-medium-purple

      &:focus
        background-color color-blue-chalk
        color color-purple-heart

      &:active
        color color-purple-heart

  &__menu
    padding-top 26px
    padding-bottom 23px
    padding-right 3px
    display flex
    align-items center

    &-items
      @extend .menu-right
      font-family 'Open Sans', Verdana, sans-serif
      font-style normal
      font-weight 400
      font-size 16px
      line-height 22px

    &-item
      &:not(:last-child)
        padding 10px 5px
        margin-right: 82px

      &:last-child
        padding 10px 0 10px 5px

      &:hover
        color color-medium-purple

      &:focus
        background-color color-blue-chalk

      &:active
        color color-purple-heart

  &__bottom
    padding-top 0
    display flex
    justify-content flex-start
    align-items center

    overflow visible
    position relative

    width 100%

    &--action
      & path
        fill color-medium-purple

      &:hover
        & path
          fill color-mauve

      &:focus
        background-color color-mauve

        & path
          fill color-bg

      &:active
        & path
          fill color-purple-heart

    &-btn
      @extend .header__bottom--action
      margin-left auto
      margin-right 24px

    &-link
      @extend .header__bottom--action
      padding 3px 4px 3px 8px

      margin-right 0
      margin-left 0
      position relative
      transform: translateY(-2px);

      display flex
      justify-content flex-start
      align-items center

      width 49px
      height 34px


      &-icon
        top 3px
        right 0

        position absolute

      &-value
        padding: 2px 0 0
        width 15px
        height 15px

        text-align center
        font-weight 700
        font-size 10px
        line-height 100%

        background-color color-crusta
        border-radius 50%

        color color-bg

    &-form

      font-weight 400
      font-size 16px
      line-height 120%
      background transparent

      width 'min(%s, calc(200% / 3))' % 761px
      max-height 60px

    &-label
      display flex
      align-items center
      border 2px solid color-alabaster
      border-radius 0 10px 10px 0
      min-width 300px
      min-height 60px
      cursor pointer

      transition background-color .3s ease-in-out, border-color .3s ease-in-out

      & > .choices
        width 100%

        &:after
          right 30px

      &:hover
        border-color color-medium-purple

      &:focus
        border-color color-medium-purple
        background-color color-magnolia

      &:active
        border-color color-purple-heart

      & .choices__item
        padding-left 27px

/*hero*/
.hero
  &__container
    width 100%

  &__slider
    position relative

    &-pagination
      position absolute
      z-index 10

  &__slide
    display flex
    flex-direction column
    align-items flex-start
    justify-content flex-end
    min-height 400px

    &-container
      padding-top 0
      padding-bottom: 80px
      display flex
      flex-direction column
      justify-content flex-end
      align-items flex-start


    &-title
      margin-bottom: 48px
      font-weight 700
      font-size 48px
      line-height 65px
      color color-dusty-gray
      max-width 500px

    &-first
      background-image url("../img/slide-1.webp")
      background-repeat no-repeat
      background-size contain
      background-position center

    &-second
      background-image url("../img/slide-2.webp")
      background-repeat no-repeat
      background-size contain
      background-position center

    &-third
      background-image url("../img/slide-3.webp")
      background-repeat no-repeat
      background-size contain
      background-position center

/*special-offers*/
.special-offers
  &__slider
    position relative

  &__navigation
    position absolute
    top -56px
    right 0
    display flex
    justify-content space-between
    align-items center
    width 77px
    height 32px

  &__item
    &:not(:nth-child(3n))
      margin-right gap

/*high-rating*/
.high-rating
  &__items
    display grid
    grid-template-rows 1fr 1fr
    grid-template-columns 1fr 1fr 1fr 1fr
    grid-gap gap
  &__item
    max-width initial
    min-height 420px

/*ad*/
.ad
  &__container
    color color-straw
    width 100%
    min-height 600px
    background-image url("../img/ad-bg.webp")
    background-repeat no-repeat
    background-size contain
    background-position center

  &__title
    font-family "Playfair Display", Verdana, sans-serif
    font-style normal
    font-weight 900
    font-size 60px
    line-height 120%

/*contacts*/
.contacts
  &__container
    background-image url("../img/contacts.webp")
    background-repeat no-repeat
    background-position center right

  &__form
    display flex
    flex-direction column
    flex-wrap nowrap

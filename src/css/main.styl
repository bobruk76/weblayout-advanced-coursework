/*header*/
.header
  grid-area header

  &__container
    padding-bottom 32px
    width 100%
    max-width initial

  &__top
    position relative
    padding-top 16px
    padding-bottom 6px

    &:after
      content ""
      position absolute
      z-index -1
      top 0
      right 0
      bottom 0
      left 0
      background-color color-alabaster

    & .container
      padding-top 0
      display flex
      flex-wrap nowrap
      overflow initial

    &-label
      transition color .3s ease-in-out, background-color .3s ease-in-out

      &:hover .choices__inner
        color color-mauve

      &:focus
        background-color color-blue-chalk

      &:active .choices__inner
        color color-purple-heart

    &-form
      margin-right 2px

    &-phone
      transform translateY(-2px)

    &-items
      @extend .menu-right
      font-family 'Open Sans', Verdana, sans-serif
      font-style normal
      font-weight 400
      font-size 14px
      line-height 100%
      color color-dusty-gray

    &-item
      transition color .3s ease-in-out, background-color .3s ease-in-out

      &:not(:last-child)
        padding 3px 8px
        margin-right 48px

      &:last-child
        padding 3px 0 3px 8px

      &:hover
        color color-medium-purple

      &:focus
        background-color color-blue-chalk
        color color-purple-heart

      &:active
        color color-purple-heart

  &__menu
    padding-top 26px
    padding-bottom 23px
    padding-right 3px
    display flex
    align-items center

    &-items
      @extend .menu-right
      font-family 'Open Sans', Verdana, sans-serif
      font-style normal
      font-weight 400
      font-size 16px
      line-height 22px

    &-item
      &:not(:last-child)
        padding 10px 5px
        margin-right: 82px

      &:last-child
        padding 10px 0 10px 5px

      &:hover
        color color-medium-purple

      &:focus
        background-color color-blue-chalk

      &:active
        color color-purple-heart

  &__bottom
    padding-top 0
    display flex
    justify-content flex-start
    align-items center

    overflow visible
    position relative

    width 100%

    &--action
      & path
        fill color-medium-purple

      &:hover
        & path
          fill color-mauve

      &:focus
        background-color color-mauve

        & path
          fill color-bg

      &:active
        & path
          fill color-purple-heart

    &-btn
      @extend .header__bottom--action
      margin-left auto
      margin-right 24px

    &-link
      @extend .header__bottom--action
      padding 3px 4px 3px 8px

      margin-right 0
      margin-left 0
      position relative
      transform: translateY(-2px);

      display flex
      justify-content flex-start
      align-items center

      width 49px
      height 34px

      &-icon
        top 3px
        right 0

        position absolute

      &-value
        padding: 2px 0 0
        width 15px
        height 15px

        text-align center
        font-weight 700
        font-size 10px
        line-height 100%

        background-color color-crusta
        border-radius 50%

        color color-bg

    &-form
      font-weight 400
      font-size 16px
      line-height 120%
      background transparent

      width 'min(%s, calc(200% / 3))' % 761px
      max-height 60px

    &-label
      display flex
      align-items center
      border 2px solid color-alabaster
      border-radius 0 10px 10px 0
      min-width 300px
      min-height 60px
      cursor pointer

      transition background-color .3s ease-in-out, border-color .3s ease-in-out

      & > .choices
        width 100%

        &:after
          right 30px

      &:hover
        border-color color-medium-purple

      &:focus
        border-color color-medium-purple
        background-color color-magnolia

      &:active
        border-color color-purple-heart

      & .choices__item
        padding-left 27px

/*aside*/
.aside
  grid-area sidebar

/*main*/
.main
  grid-area main

/*hero*/
.hero
  &__container
    overflow hidden
    width 100%

  &__slider
    position relative

  &__slide
    display flex
    flex-direction column
    align-items flex-start
    justify-content flex-end
    min-height 400px

    &-container
      padding-top 0
      padding-bottom: 80px
      display flex
      flex-direction column
      justify-content flex-end
      align-items flex-start

    &-title
      margin-bottom: 48px
      font-weight 700
      font-size 48px
      line-height 65px
      color color-dusty-gray
      max-width 500px

      &--white
        color color-bg
        max-width 590px

    &-first
      background-image url("../img/slide-1.webp")
      background-repeat no-repeat
      background-size contain
      background-position center

    &-second
      background-image url("../img/slide-2.webp")
      background-repeat no-repeat
      background-size contain
      background-position center

    &-third
      background-image url("../img/slide-3.webp")
      background-repeat no-repeat
      background-size contain
      background-position center

/*special-offers*/
.special-offers
  &__item
    &:not(:nth-child(3n))
      margin-right gap

/*high-rating*/
.high-rating
  &__container
    padding-bottom: 70px
    display flex
    flex-direction column
    justify-content flex-start
    align-items center

  &__title
    align-self flex-start

  &__items
    margin-bottom: gap
    display grid
    grid-template-rows 1fr 1fr
    grid-template-columns 1fr 1fr 1fr 1fr
    grid-gap gap

  &__item
    max-width initial
    min-height 420px

  &__btn
    padding 20px 35px

/*ad*/
.ad
  grid-area ad
  display flex
  flex-direction column
  justify-content center
  color color-straw
  width 100%
  min-height 600px
  background-image url("../img/ad-bg.webp")
  background-repeat no-repeat
  background-size contain
  background-position center
  //@media (max-width 320px)
  //  background-image url("../img/ad-bg-320.webp")

  &__container
    padding 11px 0 0
    display flex
    flex-direction column
    justify-content flex-start
    align-items flex-start

  &__title
    margin 0
    font-family "Playfair Display", Verdana, sans-serif
    font-style normal
    font-weight 900
    font-size 60px
    line-height 120%

  &__descr
    margin-bottom 49px
    font-weight 400
    font-size 48px
    line-height 120%
    color color-bg
    max-width 508px

  &__btn
    padding 20px 30px

/*useful*/

/*category*/
.category
  &__items
    display grid
    grid-template-columns repeat(6, 1fr)
    grid-gap gap

  &__item
    grid-column span 2

    &--wide
      grid-column span 3

/*contacts*/
.contacts
  &__container
    padding-bottom 68px
    background-image url("../img/contacts.webp")
    background-repeat no-repeat
    background-position top 94px right

  &__form
    &-title
      margin-bottom 8px

    &-descr
      margin-bottom 'calc(%s / 2)' % gap
      font-weight 400
      font-size 14px
      line-height 19px
      color color-dove-gray

/*footer*/
.footer
  grid-area footer

  &__top
    position relative

    &:after
      content ""
      position absolute
      z-index -1
      top 0
      right 0
      bottom 0
      left 0
      background-color color-gallery

  &__container
    padding-top 26px
    padding-bottom 24px
    display flex
    justify-content space-between

  &__left
    display inline-flex
    flex-direction column
    align-items flex-start
    justify-content space-between

  &__social
    &-items
      display inline-grid
      grid-template-columns repeat(3, auto)
      grid-gap 17px

    &-item
      position relative
      width 33px
      height 30px

      &-link.link
        position absolute
        z-index 1
        top 0
        right 0
        bottom 0
        left 3px
        color color-dusty-gray
        outline none
        transition color .3s ease-in-out

        &:after
          content ""
          position absolute
          z-index -1
          top -3px
          right -3px
          bottom -3px
          left -3px
          background-color transparent
          transition background-color .3s ease-in-out

        & path
          fill currentColor

        &:hover
          color color-medium-purple

        &:focus
          color color-bg

          &:after
            background-color color-mauve

        &:active
          color color-purple-heart

  &__cards
    display inline-grid
    grid-template-columns repeat(4, auto)
    grid-gap 130px

  &__card
    display flex
    row-gap 10px
    flex-direction column
    align-items flex-start

    &-link
      &.link
        font-weight 400
        font-size 14px
        line-height 100%
        color color-dusty-gray

      &-title
        &.link
          color color-mine-shaft

  &__bottom
    padding: 0
    display flex
    justify-content center

    &-info
      background linear-gradient(color-bg, color-bg)
      color color-dusty-gray
      font-weight 400
      font-size 14px
      line-height 19px


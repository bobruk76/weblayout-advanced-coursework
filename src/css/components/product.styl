@import 'breadcrumbs.styl'
.breadcrumbs
  &__container
    padding 0

.product
  &-breadcrumbs
    margin-bottom 0

    @media (max-width 425px)
      display none

    & .breadcrumbs
      margin-bottom 31px
      @media (max-width 900px)
        margin-bottom 29px

  &__modal
    &-dialog
      & > .modal-window__content
        padding 30px

        width fit-content
        max-width 624px

    &-accept
      & > .modal-window__content
        padding 118px 75px
        display flex
        flex-direction column
        align-items center

        width fit-content

    &-images
      padding-top 143px

      & .swiper-navigation
        z-index 10
        top 67px
        left 'calc(%s / 2)' % gap
        width 'calc(100% - %s)' % gap

      & > .modal-window__content
        padding 0
        display flex
        flex-direction column
        align-items center

        & .product__items
          display flex
          align-items center

          & .product__item.swiper-slide
            display flex
            justify-content center
            align-items center


      & .modal-window__picture
        margin 0
        padding 50px 107px
        width 100%

        &-img
          width 100%

      & .product__item-img
        max-height initial
        min-height 126px

  &__container
    position relative
    padding-top 0

    display grid

    grid-template-columns minmax(514px, 1fr) minmax(30%, 1fr)
    grid-template-rows repeat(4, auto)
    column-gap 32px
    row-gap 13px
    overflow hidden

    @media (max-width 900px)
      grid-template-rows repeat(5, auto)
      grid-template-columns repeat(2, auto)
      row-gap 32px

    @media (max-width 600px)
      padding-top 6px
      display flex
      flex-direction column
      row-gap 13px

  &__card
    padding 16px 0 0

    grid-row 1 / 3
    grid-column 2 / -1

    justify-content flex-start
    align-items flex-start

    max-width initial
    width initial
    min-height initial
    @media (max-width 1440px)
      width 100%
    @media (max-width 900px)
      padding 0

      grid-row 2 / 2
      grid-column 2 / -1

      align-self center
    @media (max-width 600px)
      padding-top 4px

    &:after
      content none

    &-rating.link
      margin-bottom 0
      @media (max-width 600px)
        margin-bottom 2px
        font-size 16px
        & > svg
          margin-right 6px

    &-title
      display flex
      flex-direction column
      @media (max-width 600px)
        margin-bottom 20px

      & > span
        font-weight 400

        &:first-child
          margin-bottom 5px
          font-size 24px
          line-height 130%
          @media (max-width 600px)
            margin-bottom 7px
            font-size 16px

        &:last-child
          font-size 14px
          line-height 100%
          color color-dusty-gray
          @media (max-width 600px)
            width 80%

    &-price
      margin 0 0 28px 0

      font-weight 400
      font-size 36px
      line-height 100%
      color color-mine-shaft
      @media (max-width 600px)
        margin-bottom 20px
        font-size 24px

    &-btn
      padding 16px 29px
      margin-bottom 15px
      @media (max-width 600px)
        width 100%

      &-outline
        margin-left 30px
        font-weight 400
        font-size 17px
        line-height 130%
        color color-medium-purple
        @media (max-width 600px)
          margin 0
          align-self center

  &__picture
    grid-row 1 / 2
    grid-column 1 / 2
    @media (max-width 900px)
      grid-column 1 / 3

  &__img
    width -webkit-fill-available

  &__items
    padding 10px 25px
    margin-bottom 14px

    grid-row 2 / 3
    grid-column 1 / 2

    display grid
    grid-template-columns repeat(4, auto)
    grid-column-gap 38px

    background-color color-alabaster
    overflow hidden
    @media (max-width 1200px)
      padding 10px
    @media (max-width 900px)
      margin 0
      padding 22px 6px
      grid-template-columns min-content
      grid-template-rows repeat(4, 61px)
      grid-column-gap initial
      grid-row-gap 19px

      justify-content center
      justify-items center
    @media (max-width 600px)
      padding 9px 10px 7px
      grid-template-columns repeat(4, auto)
      grid-template-rows initial
      grid-column-gap 38px
      justify-content initial

  &__item
    &-img
      max-height 61px

  &__article
    grid-row 3 / 4
    grid-column 1 / 2
    color color-mine-shaft
    @media (max-width 900px)
      grid-row 3 / 4
      grid-column 1 / 3
      max-width 515px
    @media (max-width 600px)
      padding-top 15px

    &-title
      margin-bottom 9px
      font-weight 600
      font-size 16px
      line-height 100%

    &-descr
      display flex
      flex-direction column

      font-weight 400
      font-size 14px
      line-height 180%

      & span
        margin-bottom 6px
        @media (max-width 900px)
          &:last-child
            margin-bottom 0

  &__schemes
    grid-row 4 / -1
    grid-column 1 / 2

    align-self end

    display flex
    align-items center
    @media (max-width 900px)
      grid-row 4 / 5
      grid-column 1 / 3

      justify-content space-between
      max-width 515px
    @media (max-width 600px)
      padding-top 19px
      order 1
      width 100%

    &-item
      &:not(:last-child)
        margin-right 32px
        @media (max-width 1024px)
          margin-right 22px
        @media (max-width 900px)
          margin 0

  &__attributes
    grid-row 3 / -1
    grid-column 2 / -1
    align-self end

    font-weight 400
    font-size 14px
    line-height 180%
    @media (max-width 900px)
      grid-row 5 / 6
      grid-column 1 / 3
      line-height initial
      transform translatey(-3px)
    @media (max-width 600px)
      padding-top 20px
      order 2
      align-self start


    &-item
      display flex
      width 100%
      @media (max-width 900px)
        margin-bottom 6px
      @media (max-width 600px)
        margin-bottom 8px
        flex-direction column

      &-name
        display flex
        width 'calc(50% + (%s / 2))' % gap
        color color-dusty-gray
        white-space nowrap
        @media (max-width 1440px)
          width 'calc(43% + (%s / 2))' % gap
        @media (max-width 900px)
          width 'calc(60% + %s)' % gap
        @media (max-width 425px)
          font-size 10px
          line-height 14px

        &:after
          content '...........................................................................'
          display block
          white-space nowrap
          overflow hidden

          font-weight 400
          font-size 5px
          line-height 0
          letter-spacing 0.6em
          @media (max-width 600px)
            display none

.like-products
  &__container
    padding-top 80px
    padding-bottom 70px
    @media (max-width 1200px)
      padding-top 70px
    @media (max-width 900px)
      padding-top 27px
    @media (max-width 600px)
      padding-top 59px
      padding-bottom 117px

  &__title
    margin-bottom 24px

    font-weight 400
    font-size 24px
    line-height 130%
    color color-mine-shaft

  &__item
    for num in (1..10)
      &.order{num}
        order: num

    &.card
      min-height 420px
      @media (max-width 600px)
        padding 16px 16px 16px
        min-width initial
        min-height initial
        height 278px

      & > .card__picture
        margin-right -16px
        margin-left -16px
        height initial
        @media (max-width 600px)
          margin-top auto
          margin-right initial
          margin-bottom auto
          margin-left initial

      & > .card__descr
        margin-bottom 21px
        @media (max-width 600px)
          margin-bottom 17px

      & > .card__rating
        @media (max-width 600px)
          margin-bottom 0

      & > .card__btn
        width 100%

  &__navigation.swiper-navigation
    z-index 10
    @media (max-width 600px)
      top auto
      right auto

      bottom -48px
      left 'calc(50% - %s)' % gap36

.dialog
  padding 30px

  &::backdrop
    background-color color-mine-shaft
    opacity .3

  &-form
    width 100%
    color color-mine-shaft

    &__title
      margin-bottom 8px
      font-weight 400
      font-size 32px
      line-height 100%

    &__descr
      margin-bottom 30px
      width 62%
      font-weight 400
      font-size 14px
      line-height 19px

    &__label
      margin-bottom 30px

      &--last
        margin-bottom 0

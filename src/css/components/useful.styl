.useful
  &-card
    position relative
    display inline-flex
    flex-direction column
    &:after
      content ""
      position absolute
      z-index -1
      top 0
      right 0
      bottom 0
      left 0
      background-color color-alabaster


    box-sizing border-box
    margin: 0

    min-height 676px

    &__picture
      margin 0
      padding 0

    &__bottom
      margin 0
      padding 24px 30px 30px 30px
      display flex
      flex-direction column
      align-items flex-start
      justify-content space-between

      min-height 246px

    &__descr
      font-weight 400
      font-size 24px
      line-height 33px

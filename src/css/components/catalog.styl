@import 'breadcrumbs.styl'
card-height = 420px

.grid-catalog
  display grid
  grid-template-columns repeat(4, 1fr)
  grid-template-rows repeat(3, auto)
  column-gap 32px

.breadcrumbs
  grid-row-start 1
  grid-column-start 1
  grid-row-end 2
  grid-column-end -1

.aside
  grid-row-start 2
  grid-column-start 1
  grid-row-end -3
  grid-column-end 2

  margin-top auto
  margin-bottom 0

.ad-aside
  grid-row-start -2
  grid-column-start 1
  grid-row-end -1
  grid-column-end 2

  margin-top auto
  margin-bottom 0

  background-image url("../img/ad-bg-320.webp")
  background-repeat no-repeat
  background-size contain
  background-position top center

.catalog
  grid-area catalog
  grid-row-start 2
  grid-column-start 2
  grid-row-end -1
  grid-column-end -1
  &__slider
    height 'calc((3 * %s) + (4 * %s))' % (card-height gap)
    //max-height 1324px
    & .swiper-pagination-bullet
      width gap
      height gap

      background-color transparent
      color color-medium-purple
      font-weight 600
      font-size 16px
      line-height 175%
      text-align center

      border 2px solid color-medium-purple
      border-radius 10px
      opacity 1

      &-active
        color color-bg
        background-color color-medium-purple

  &__item.card
    max-width initial
    min-height initial
    height 'calc(1 * %s)' % card-height



@import 'breadcrumbs.styl'
@import 'multi-range-slider.styl'
@import 'aside.styl'

card-height = 420px

.grid-catalog
  position relative
  padding-top 0
  padding-bottom 132px
  display grid
  grid-template-columns repeat(4, 1fr)
  grid-template-rows repeat(4, auto)
  column-gap gap
  @media (max-width 1200px)
    grid-template-columns repeat(3, 1fr)
  @media (max-width 425px)
    padding-top 11px

  &__title
    margin-top 0
    margin-bottom 23px

    grid-row-start 2
    grid-row-end 2
    grid-column-start 2
    grid-column-end -1

    font-weight 400
    font-size 24px
    line-height 130%

    color color-mine-shaft
    @media (max-width 1200px)
      margin-bottom 15px
      grid-column-start 1
      grid-column-end -1
    @media (max-width 900px)
      margin-bottom 18px
    @media (max-width 425px)
      margin-bottom 9px

  & .breadcrumbs
    @media (max-width 425px)
      display none

/*catalog*/
.catalog
  position relative
  z-index 5
  grid-row-start 3
  grid-row-end -1
  grid-column-start 2
  grid-column-end -1

  @media (max-width 1200px)
    grid-row-start 4
    grid-row-end -1
    grid-column-start 1
    grid-column-end -1

  &__slider

    height 'calc((3 * %s) + (2 * %s))' % (card-height gap)
    @media (max-width 600px)
      card-height = 278px
      height 'calc((3 * %s) + %s)' % (card-height gap)

    &.swiper-horizontal
      position initial

    & .swiper-pagination-bullets
      bottom 'calc(-2 * %s)' % gap
      @media (max-width 900px)
        left 0
        right 0
        text-align center


    & > .swiper-pagination-bullets.swiper-pagination-horizontal
      & > .swiper-pagination-bullet
        width gap
        height gap

        background-color transparent
        color color-medium-purple
        font-weight 600
        font-size 16px
        line-height 175%
        text-align center

        border 2px solid color-medium-purple
        border-radius 10px
        opacity 1
        @media (max-width 600px)
          margin 0 8px

        &:hover
          color color-bg
          background-color color-medium-purple

        &:focus
          color color-bg
          background-color color-mauve

        &:active
          color color-bg
          background-color color-purple-heart
          border-color color-purple-heart

        &-active
          color color-bg
          background-color color-medium-purple

  &__item.card
    max-width initial
    min-height initial
    height 'calc(1 * %s)' % card-height
    @media (max-width 600px)
      padding 17px
      min-width initial
      height 278px

    & .card__picture
      margin-left -14px
      margin-right -14px
      @media (max-width 600px)
        margin 0

    & .card__btn
      @media (max-width 600px)
        width 100%
        padding-top 9px
        padding-right initial
        padding-bottom 11px
        padding-left initial


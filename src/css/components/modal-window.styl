@keyframes animatetop
  0%
    top -500px
    opacity 0
  100%
    top 180px
    opacity 1

.modal-window
  display none

  position fixed
  z-index 10
  left 0
  top 0
  width 100%
  height 100%

  background-color rgba(51, 51, 51, .3)

  &__content
    margin auto
    padding 30px

    position relative
    top -500px

    width fit-content

    border-radius 10px
    border-color color-bg
    background-color color-bg
    opacity 0

    transition opacity .3s ease-in-out, top .3s ease-in-out

    &-btn
      &-close
        position absolute
        top 20px
        right 20px

  &--visible
    display block

    & > .modal-window__content
      animation animatetop .3s
      animation-fill-mode forwards

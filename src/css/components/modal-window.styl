@keyframes animatetop
  0%
    top -500px
    opacity 0
  100%
    top 0
    opacity 1

.modal-window
  padding-top 181px
  display none

  position fixed
  z-index 99
  left 0
  top 0
  width 100%
  height 100%

  background-color rgba(51, 51, 51, .3)
  @media (max-width 600px)
    padding-right 12px
    padding-left 12px

  &__items
    grid-auto-flow column
    margin 0
    padding 20px 50px
    width 100%
    min-height 166px

  &__picture
    margin-bottom gap
    margin-right 'calc(%s * 1.5)' % gap

  &__descr.descr
    font-weight 400
    font-size 32px
    line-height 100%
    @media(max-width 600px)
      font-size 16px

  &__content
    margin auto

    position relative

    border-radius 10px
    border-color color-bg
    background-color color-bg
    opacity 0

    transition opacity .3s ease-in-out, top .3s ease-in-out

    &-btn
      &-close
        position absolute
        top 20px
        right 20px
        color color-dusty-gray

        & path
          fill currentColor

        &:hover
          color color-medium-purple

        &:focus
          background-color color-blue-chalk
          color color-purple-heart

        &:active
          color color-purple-heart

  &--visible
    display block

    & > .modal-window__content
      animation animatetop .3s
      animation-fill-mode forwards

.dialog
  padding 30px

  &::backdrop
    background-color color-mine-shaft
    opacity .3

  &-form
    width 100%
    color color-mine-shaft

    &__title
      margin-bottom 8px
      font-weight 400
      font-size 32px
      line-height 100%
      @media (max-width 600px)
        font-size 24px

    &__descr
      margin-bottom 30px
      width 62%
      font-weight 400
      font-size 14px
      line-height 19px
      @media (max-width 600px)
        margin-bottom 16px
        width 100%

    &__label
      margin-bottom 30px
      @media (max-width 600px)
        margin-bottom 16px

      &--last
        margin-bottom 0

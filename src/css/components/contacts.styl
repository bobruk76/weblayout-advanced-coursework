#map
  width 100%
  height 510px

  & [class*="balloon-content__header"]
    font-family 'Open Sans', Verdana, sans-serif
    font-style normal
    font-weight 600
    font-size 16px
    line-height 100%
    color color-mine-shaft

  & [class*="balloon__content"]
    padding 30px
    margin 0
    font-family 'Open Sans', Verdana, sans-serif
    font-style normal
    font-weight 400
    font-size 14px
    line-height 180%
    color color-mine-shaft
    & .grey
      color color-dusty-gray
    & .phone
      padding-left 22px
      background-image url("../img/sprite.svg#call")
      background-repeat no-repeat
      background-position left center
      background-size 22px


  & [class*="balloon-content__footer"]
    font-family 'Open Sans', Verdana, sans-serif
    font-style normal
    font-weight 400
    font-size 14px
    line-height 180%
    color color-mine-shaft
    & .grey
      color color-dusty-gray


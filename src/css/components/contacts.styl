.contacts-page
  &__container
    padding-top 0
    padding-bottom 68px

  &__title
    margin-bottom 18px

  &__form
    margin-bottom gap
    display grid
    grid-template-columns auto 120px
    column-gap 32px
    justify-content initial

    max-width 777px
    width initial

    &-label
      margin 0
      max-width initial

    &-btn
      margin 0
      width 100%


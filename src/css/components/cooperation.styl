.shipper
  &__container
    font-weight 400
    font-size 16px
    line-height 150%
    color color-dove-gray
  &__item
    position relative
    padding-left 37px
    &--first::before
      content ''
      position absolute
      top 0
      left 0
      background-image url("../img/sprite.svg#network")
      background-repeat no-repeat
      background-position left top
      width 37px
      height 25px

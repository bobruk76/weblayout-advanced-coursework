html
  box-sizing border-box

*,
*::before,
*::after
  box-sizing inherit

a,
a:focus,
a:visited
  color inherit
  text-decoration none
  font-weight initial

body
  min-width 320px
  font-family "Open Sans", Verdana, sans-serif
  color color-mine-shaft
  background-color color-bg

.visually-hidden
  position absolute
  width 1px
  height 1px
  margin -1px
  border 0
  padding 0
  clip-path inset(100%)
  clip rect(0 0 0 0)
  overflow: hidden

.filtered
  filter: invert(90%) sepia(0%) saturate(0%) hue-rotate(147deg) brightness(96%) contrast(86%)
  transition filter .3s ease-in-out

  &:hover
    filter: invert(48%) sepia(71%) saturate(1571%) hue-rotate(340deg) brightness(103%) contrast(101%)

  &:focus
    filter: invert(39%) sepia(86%) saturate(481%) hue-rotate(333deg) brightness(87%) contrast(92%)

  &:active
    filter: invert(26%) sepia(41%) saturate(6850%) hue-rotate(19deg) brightness(97%) contrast(94%)

.btn-reset
  padding 0
  border none
  background-color transparent
  color inherit
  cursor pointer
  word-break break-word

.btn
  padding 20px 48px

  display inline-flex

  justify-content center
  align-items center

  color color-bg
  background-color color-medium-purple
  outline none

  width fit-content
  font-family 'Open Sans'
  font-weight 700
  font-size 16px
  line-height 100%

  border 2px solid color-medium-purple
  border-radius 10px

  transition color .3s ease-in-out, border-color .3s ease-in-out, background-color .3s ease-in-out

  &:hover
    background-color color-mauve
    border-color color-mauve

  &:focus
    color color-bg
    background-color color-mauve
    border-color color-purple-heart

  &:active
    color color-bg
    background-color color-purple-heart
    border-color color-purple-heart

  &-outline
    padding 17px 33px
    font-weight 600

    background-color transparent
    color color-medium-purple
    border-color color-medium-purple

    &:hover
      color color-bg
      background-color color-medium-purple
      border-color color-medium-purple

  &-filtered
    @extend .filtered

.list-reset
  margin 0
  padding 0
  list-style none

.link
  position relative
  color currentColor
  outline none
  cursor pointer

  transition color .3s ease-in-out, background-color .3s ease-in-out
  &--filtered
    @extend .filtered

.phone
  display inline-flex
  flex-direction reverse
  align-items flex-start
  justify-content flex-start

  color color-crusta
  font-family 'Open Sans', Verdana, sans-serif
  font-style normal
  font-weight 400
  font-size 14px
  line-height 22px
  transition background-color .3s ease-in-out, color .3s ease-in-out
  & path
    fill currentColor
    transition fill .3s ease-in-out

  &:hover
    color color-koromiko
  &:focus
    background-color color-milk-punch
  &:active
    color color-rust

.title
  margin 0
  padding 0
  font-family 'Open Sans', Verdana, sans-serif
  font-style normal
  font-weight 400
  font-size 32px
  line-height 100%

  @media (max-width 576px)
    font-size 18px
    line-height 23px

.descr
  margin 0
  padding 0
  font-style normal
  font-weight 400
  font-size 16px
  line-height 22px
  @media (max-width 576px)
    font-size 14px
    line-height 18px

.form
  &-select
    &__label
      margin-right 19px
      display flex
      align-items center
      //& > span
      //  margin-right: 2px

  &__label
    position relative
    width fit-content

  &__input
    position relative
    padding 15px 23px
    height 50px
    width 100%
    background color-alabaster

    font-family 'Open Sans'
    font-style normal;
    font-weight 400
    font-size 16px
    line-height 40px

    border-radius 10px
    border none
    outline none
    color color-mine-shaft
    transition color .3s ease-in-out, border-color .3s ease-in-out, background-color .3s ease-in-out

    &::placeholder
      color color-dusty-gray
      transition color .3s ease-in-out

    &:hover
      color color-burning-orange

    &:focus
      border 1px solid color-burning-orange

  &__textarea
    height 100%

  &__btn
    padding 11px 20px

  &__message
    &-label
      height -webkit-fill-available

  &__checkbox
    &-input
      &-label
        display flex
        align-items center

      &--hide
        position absolute
        opacity 0
        appearance none
        &:checked + .checkbox-icon:after
          border none
          background-image url("../img/sprite.svg#cheked")
          background-repeat no-repeat
          background-position center
          background-size cover

.checkbox
  &-icon
    display flex
    flex-direction row-reverse
    align-items center

    font-style normal
    font-weight 400;
    font-size 14px;
    line-height 19px

    &:after
      content ""

      height 14px
      width 14px
      border 1px solid color-dusty-gray
      border-radius 2px
      background-color color-bg

.menu-right
  margin-left auto
  margin-right 0
  display flex

gutter = 32px
.container
  margin-right auto
  margin-left auto
  padding-top 70px

  width 100%
  max-width 'min(1280px, calc(100% - 2 * %s))' % gutter
  overflow-y visible
  overflow-x hidden
  @media (max-width 900px)
    gutter = 27px
    max-width 'calc(100% - 2 * %s)' % gutter
  @media (max-width 576px)
    gutter = 21px
    max-width 'calc(100% - 2 * %s)' % gutter

html
  box-sizing border-box

*,
*::before,
*::after
  box-sizing inherit

a,
a:focus,
a:visited
  color inherit
  text-decoration none
  font-weight initial

body
  min-width 320px
  font-family "Open Sans", Verdana, sans-serif
  color #121723
  background-color #fff

.visually-hidden
  position absolute
  width 1px
  height 1px
  margin -1px
  border 0
  padding 0
  clip-path inset(100%)
  clip rect(0 0 0 0)
  overflow: hidden

.filtered
  filter: invert(90%) sepia(0%) saturate(0%) hue-rotate(147deg) brightness(96%) contrast(86%)
  transition filter .3s ease-in-out

  &:hover
    filter: invert(48%) sepia(71%) saturate(1571%) hue-rotate(340deg) brightness(103%) contrast(101%)

  &:focus
    filter: invert(39%) sepia(86%) saturate(481%) hue-rotate(333deg) brightness(87%) contrast(92%)

  &:active
    filter: invert(26%) sepia(41%) saturate(6850%) hue-rotate(19deg) brightness(97%) contrast(94%)

.btn-reset
  padding 0
  border none
  background-color transparent
  color inherit
  cursor pointer
  word-break break-word

.btn
  padding 16px 22px

  display inline-flex

  justify-content center
  align-items center

  color color-bg
  background-color color-burning-orange
  border 3px solid color-burning-orange
  outline none

  font-family 'Open Sans'
  font-weight 700
  font-size 16px
  line-height 19px

  transition color .3s ease-in-out, border-color .3s ease-in-out, background-color .3s ease-in-out
  @media (max-width 576px)
    padding 9px 19px
    font-size 14px
    line-height 16px

  &:hover
    background-color color-tuscany
    border-color color-tuscany

  &:focus
    background-color color-burning-orange
    border-color color-grenadier

  &:active
    background-color color-grenadier
    border-color color-grenadier

  &-outline
    background-color transparent

    &:hover
      background-color color-burning-orange
      border-color color-burning-orange

    &:focus
      background-color color-tuscany
      border-color color-burning-orange

  &-filtered
    @extend .filtered

.list-reset
  margin 0
  padding 0
  list-style none

.link
  position relative
  color currentColor
  outline none
  cursor pointer

  transition color .3s ease-in-out, background-color .3s ease-in-out
  &--filtered
    @extend .filtered


.phone
  display inline-flex
  flex-direction row-reverse
  align-items center

  color color-crusta
  font-family 'Open Sans', Verdana, sans-serif
  font-style normal
  font-weight 400
  font-size 14px
  line-height 22px

  &::after
    content ""
    margin-right 4px
    width 22px
    height 22px
    background-image url("../img/sprite.svg#call")
    background-repeat no-repeat
    background-position center
    background-size cover

.title
  margin 0
  padding 0
  font-family 'Open Sans', sans-serif
  font-style normal
  font-weight 700
  font-size 24px
  line-height 31px
  @media (max-width 576px)
    font-size 18px
    line-height 23px

.descr
  margin 0
  padding 0
  font-style normal
  font-weight 400
  font-size 16px
  line-height 22px
  @media (max-width 576px)
    font-size 14px
    line-height 18px

.form
  &__label
    position relative

  &__input
    position relative
    padding 15px 23px
    height 50px
    width 100%
    background color-tundora
    font-family 'Roboto'
    font-style normal
    font-weight 400
    font-size 16px
    line-height 19px
    border none
    outline none
    color color-bg
    transition color .3s ease-in-out, border-color .3s ease-in-out, background-color .3s ease-in-out
    @media (max-width 576px)
      margin-bottom: 18px
      height 40px
      font-weight 700
      font-size 14px
      line-height 16px


    &::placeholder
      color color-silver
      transition color .3s ease-in-out

    &:hover
      color color-burning-orange

    &:focus
      border 1px solid color-burning-orange

  &__textarea
    height 100%

  &__btn
    padding 11px 20px

  &__message-label
    height -webkit-fill-available

.menu-right
  margin-left auto
  margin-right 0
  display flex

gutter = 32px
.container
  margin-right auto
  margin-left auto

  max-width 'min(1280px, calc(100% - 2 * %s))' % gutter
  overflow hidden
  @media (max-width 900px)
    gutter = 27px
    max-width 'calc(100% - 2 * %s)' % gutter
  @media (max-width 576px)
    gutter = 21px
    max-width 'calc(100% - 2 * %s)' % gutter

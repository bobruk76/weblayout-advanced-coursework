html
  box-sizing border-box

*,
*::before,
*::after
  box-sizing inherit

a,
a:focus,
a:visited
  color inherit
  text-decoration none
  font-weight initial

body
  min-width 320px
  font-family "Open Sans", Verdana, sans-serif

.visually-hidden
  position absolute
  width 1px
  height 1px
  margin -1px
  border 0
  padding 0
  clip-path inset(100%)
  clip rect(0 0 0 0)
  overflow hidden

.btn-reset
  padding 0
  border none
  background-color transparent
  color inherit
  cursor pointer
  word-break break-word

.btn-arrow
  & *
    stroke color-medium-purple

  &:hover
    & circle
      fill color-medium-purple
      stroke color-medium-purple

    & path
      stroke color-bg

  &:focus
    & circle
      stroke color-medium-purple
      fill color-mauve

    & path
      stroke color-bg

  &:active
    & circle
      fill color-purple-heart
      stroke color-purple-heart

    & path
      stroke color-bg

.btn
  position relative
  z-index 0
  padding 20px 48px

  display inline-flex

  justify-content center
  align-items center

  color color-bg
  outline none

  width fit-content
  font-family "Open Sans", Verdana, sans-serif
  font-weight 700
  font-size 16px
  line-height 100%
  border 2px solid color-medium-purple
  border-radius 10px

  transition color .3s ease-in-out, border-color .3s ease-in-out, background-color .3s ease-in-out

  &:after
    content ""
    position absolute
    z-index -1
    top 0
    right 0
    bottom 0
    left 0
    background-color color-medium-purple
    border-radius 8px
    transition border-color .3s ease-in-out, background-color .3s ease-in-out

  &:hover
    border-color color-mauve
    &:after
      background-color color-mauve

  &:focus
    color color-bg
    border-color color-purple-heart
    &:after
      background-color color-mauve

  &:active
    color color-bg
    border-color color-purple-heart
    &:after
      background-color color-purple-heart

  &-outline
    z-index initial
    padding 17px 33px
    font-weight 600

    background-color transparent
    color color-medium-purple
    @media (max-width 600px)
      padding-top 10px
      padding-right initial
      padding-bottom 10px
      padding-left initial


    &:after
      background-color transparent
    &:hover
      color color-bg
      border-color color-medium-purple

.list-reset
  margin 0
  padding 0
  list-style none

.link
  position relative
  color currentColor
  outline none
  cursor pointer

  transition color .3s ease-in-out, background-color .3s ease-in-out

.phone
  display inline-flex

  align-items center
  justify-content flex-start

  color color-crusta
  font-family 'Open Sans', Verdana, sans-serif
  font-style normal
  font-weight 400
  font-size 14px
  line-height 22px
  white-space nowrap

  transition background-color .3s ease-in-out, color .3s ease-in-out

  &__icon
    display flex

  & path
    fill currentColor
    transition fill .3s ease-in-out

  &:hover
    color color-koromiko

  &:focus
    background-color color-milk-punch

  &:active
    color color-rust

.title
  margin 0 0 26px 0
  padding 0
  font-family 'Open Sans', Verdana, sans-serif
  font-style normal
  font-weight 400
  font-size 32px
  line-height 100%

  @media (max-width 576px)
    font-size 18px
    line-height 23px

  @media (max-width 425px)
    font-size 24px

.descr
  margin 0
  padding 0
  font-style normal
  font-weight 400
  font-size 16px
  line-height 22px
  @media (max-width 576px)
    font-size 14px
    line-height 18px

.form
  display flex
  flex-direction column
  flex-wrap nowrap
  align-items flex-start
  justify-content flex-start

  width 'calc(50% - (%s / 2))' % gap
  @media(max-width 1200px)
    width 'calc(44% - (%s / 2))' % gap

  &-select
    &__label
      margin-right 19px
      display flex
      align-items center

  &__label
    position relative
    margin-bottom: 30px
    width 100%

    & .link
      font-weight 400
      font-size 14px
      line-height 19px
      text-decoration-line underline
      color color-medium-purple

  &__fieldset
    padding 0
    margin-bottom 26px

    border none

    &-legend
      margin-bottom: 10px
      @media(max-width 1200px)
        margin 0
        display none

  &__input
    position relative
    padding 27px 18px
    height 50px
    width 100%


    font-family 'Open Sans'
    font-style normal;
    font-weight 400
    font-size 16px
    line-height 40px

    border-radius 10px
    border 1px solid color-alabaster
    outline none
    color color-mine-shaft
    background-color color-alabaster

    transition color .3s ease-in-out, border-color .3s ease-in-out, background-color .3s ease-in-out
    @media(max-width 1200px)
      padding-bottom 28px

    &::placeholder
      color color-dusty-gray
      transition color .3s ease-in-out

    &:hover
      background-color color-gallery
      border-color color-gallery

    &:focus
      background-color color-magnolia
      border-color color-medium-purple

    &:active
      background-color color-alabaster
      border-color color-sulu

    &-label
      position relative
      margin-bottom 27px
      width 100%

  &__textarea
    height 100%

  &__btn
    margin-bottom 13px
    padding 17px 32px

  &__message
    &-label
      height -webkit-fill-available

  &__checkbox
    display inline-flex

    &-input
      &-label
        display flex
        align-items center
        cursor pointer

      &--hide
        position absolute
        opacity 0
        appearance none

        &:checked + .checkbox-icon:after
          border none
          background-image url("../img/sprite.svg#cheked")
          background-repeat no-repeat
          background-position center
          background-size cover

    & .link
      font-weight 400
      font-size 14px
      line-height 19px
      text-decoration-line underline
      color color-medium-purple
      @media (max-width 425px)
        font-size 12px

  &__items
    @media(max-width 1200px)
      display none

  &__select
    display none
    @media(max-width 1200px)
      display initial

.checkbox
  &-icon
    margin-right 4px
    display flex
    flex-direction row-reverse
    align-items center

    font-style normal
    font-weight 400
    font-size 14px
    line-height 19px
    @media (max-width 425px)
      font-size 12px

    &:after
      content ""
      margin-right 8px

      height 14px
      width 14px
      border 1px solid color-dusty-gray
      border-radius 2px
      background-color color-bg

.menu-right
  margin-left auto
  margin-right 0
  display flex

.tooltip
  padding-left: 4px
  position relative
  z-index 1

  &__popup
    padding 5px
    position absolute
    top -60px
    left calc(50% + 3px)

    width 157px
    height 52px

    font-weight 400
    font-size 9px
    line-height 156%
    text-align center
    color color-bg
    background-color color-mine-shaft

    opacity 0
    visibility hidden
    transform translateX(-50%) translateY(10px)
    transition opacity .3s ease-in-out, transform .3s ease-in-out, visibility .3s ease-in-out;

    &:after
      content ""
      position absolute
      top 100%
      left 50%
      margin-left -5px

      border-top: 6px solid color-mine-shaft
      border-left: 4px solid transparent;
      border-right: 4px solid transparent;

  &__marker
    cursor pointer

    & path
      fill color-crusta

    & circle
      stroke color-crusta

    &:hover
      & .tooltip__marker-circle
        fill color-crusta

      & .tooltip__marker-ring
        stroke color-crusta

      & path
        fill color-bg

      & + .tooltip__popup
        opacity 1
        visibility visible
        transform translateX(-50%) translateY(0)

.container
  margin-right auto
  margin-left auto
  padding-top 70px

  width 100%
  max-width 'min(1280px, calc(100% - 2 * %s))' % gap
  overflow-y visible
  overflow-x hidden
  color color-mine-shaft
  @media (max-width 1200px)
    max-width 'min(1280px, calc(100% - (2 * %s)))' % gap36
  @media (max-width 900px)
    max-width 'min(900px, calc(100% - (4 * %s)))' % gap36
  @media (max-width 768px)
    max-width 'min(624px, calc(100% - (2 * %s)))' % gap12

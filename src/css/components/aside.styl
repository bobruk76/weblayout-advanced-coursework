.aside
  margin-top 0
  grid-row-start 2
  grid-row-end -2
  grid-column-start 1
  grid-column-end 2
  align-self start
  @media (max-width 1200px)
    grid-row-start 3
    grid-row-end 3
    grid-column-start 1
    grid-column-end -1

  &__form
    width initial
    @media (max-width 1200px)
      display grid
      grid-template-columns auto repeat(4, 1fr)
      column-gap gap
      align-items center
    @media (max-width 900px)
      margin-bottom gap
      grid-template-columns repeat(2, 187px)
      grid-template-rows auto repeat(2, 1fr)
      column-gap gap
      row-gap 'calc(%s / 2)' % gap

    & .choices
      display none

      background color-alabaster
      border-radius 10px
      font-weight: 400;
      font-size 16px
      height 0
      width 0

      @media (max-width 1200px)
        padding-left 13px
        display flex
        height 40px
        width initial

      & .choices__item
        background transparent

      & .choices__list--dropdown
        max-height initial

      & .choices__placeholder
        color color-mine-shaft
        opacity initial


    &-title
      margin-bottom 19px
      font-weight 400
      font-size 18px
      line-height 130%
      color color-mine-shaft
      @media (max-width 1200px)
        margin-bottom 32px
      @media (max-width 900px)
        margin-bottom 0
        grid-row 1 / 2
        grid-column 1 / 3

      &-big
        @media (max-width 1200px)
          display none

      &-small
        display none
        font-size 14px
        color color-mine-shaft
        @media (max-width 1200px)
          margin-right 11px
          display initial

    &-label
      margin-bottom 11px

    & .form__fieldset
      margin-bottom 18px
      width 100%
      @media (max-width 1200px)
        margin-bottom 31px
      @media (max-width 900px)
        margin-bottom 0

      &-legend
        font-weight 600
        font-size 16px
        line-height 130%
        color color-dove-gray
        width 100%

    & .checkbox-icon
      font-weight 400
      font-size 16px
      line-height 130%
      color color-dove-gray

      &:after
        width 20px
        height 20px

/*ad-aside*/
.ad-aside
  padding 30px

  margin-top auto
  margin-bottom 0

  grid-row-start -2
  grid-row-end -1

  grid-column-start 1
  grid-column-end 2

  display flex
  flex-direction column
  justify-content end

  background-color color-mine-shaft
  background-image url("../img/ad-aside-bg-320.webp")
  background-repeat no-repeat
  background-size contain
  background-position top center

  border-radius 10px

  min-height 360px

  @media (max-width 1200px)
    display none

  &__title
    margin 0

    font-family "Playfair Display", Verdana, sans-serif
    font-style normal
    font-weight 900
    font-size 24px
    line-height 32px
    color color-straw

  &__descr
    margin 0 0 10px 0

    font-weight 400
    font-size 16px
    line-height 22px
    color color-dusty-gray

    width 75%

  &__link.link
    align-items baseline


.header
  grid-area header

  &__container
    position relative
    padding-bottom gap
    width 100%
    max-width initial

  &__top
    position relative
    padding-top 16px
    padding-bottom 6px

    &:after
      content ""
      position absolute
      z-index -1
      top 0
      right 0
      bottom 0
      left 0
      background-color color-alabaster

    & .container
      padding-top 0
      display flex
      flex-wrap nowrap
      overflow initial
      @media (max-width 1200px)
        display grid
        grid-template-columns repeat(auto, 4)
        grid-template-rows repeat(auto, 2)

        grid-template-areas "header-form header-phone header-phone header-phone"\
        "header-menu header-menu header-lk header-card"


    &-label
      transition color .3s ease-in-out, background-color .3s ease-in-out

      &:hover .choices__inner
        color color-mauve

      &:focus
        background-color color-blue-chalk

      &:active .choices__inner
        color color-purple-heart

    &-form
      grid-area header-form
      margin-right 2px

    &-phone
      grid-area header-phone
      transform translateY(-2px)

    &-items
      grid-area header-menu
      @extend .menu-right
      font-family 'Open Sans', Verdana, sans-serif
      font-style normal
      font-weight 400
      font-size 14px
      line-height 100%
      color color-dusty-gray

    &-item
      transition color .3s ease-in-out, background-color .3s ease-in-out

      &:not(:last-child)
        padding 3px 8px
        margin-right 48px

      &:last-child
        padding 3px 0 3px 8px

      &:hover
        color color-medium-purple

      &:focus
        background-color color-blue-chalk
        color color-purple-heart

      &:active
        color color-purple-heart

  &__menu
    padding-top 26px
    padding-bottom 23px
    padding-right 3px
    display flex
    align-items center

    &-items
      @extend .menu-right
      font-family 'Open Sans', Verdana, sans-serif
      font-style normal
      font-weight 400
      font-size 16px
      line-height 22px

    &-item
      &:not(:last-child)
        padding 10px 5px
        margin-right: 82px

      &:last-child
        padding 10px 0 10px 5px

      &:hover
        color color-medium-purple

      &:focus
        background-color color-blue-chalk

      &:active
        color color-purple-heart

  &__bottom
    padding-top 0
    display flex
    justify-content flex-start
    align-items center

    overflow visible
    position relative

    width 100%

    &--action
      & path
        fill color-medium-purple

      &:hover
        & path
          fill color-mauve

      &:focus
        background-color color-mauve

        & path
          fill color-bg

      &:active
        & path
          fill color-purple-heart

    &-btn
      grid-area header-lk
      @extend .header__bottom--action
      margin-left auto
      margin-right 24px

    &-link
      grid-area header-card
      @extend .header__bottom--action
      padding 3px 4px 3px 8px

      margin-right 0
      margin-left 0
      position relative
      transform: translateY(-2px);

      display flex
      justify-content flex-start
      align-items center

      width 49px
      height 34px

      &-icon
        top 3px
        right 0

        position absolute

      &-value
        padding: 2px 0 0
        width 15px
        height 15px

        text-align center
        font-weight 700
        font-size 10px
        line-height 100%

        background-color color-crusta
        border-radius 50%

        color color-bg

    &-form
      font-weight 400
      font-size 16px
      line-height 120%
      background transparent

      width 'min(%s, calc(200% / 3))' % 761px
      max-height 60px

    &-label
      display flex
      align-items center
      border 2px solid color-alabaster
      border-radius 0 10px 10px 0
      min-width 300px
      min-height 60px
      cursor pointer

      transition background-color .3s ease-in-out, border-color .3s ease-in-out

      & > .choices
        width 100%

        &:after
          right 30px

      &:hover
        border-color color-medium-purple

      &:focus
        border-color color-medium-purple
        background-color color-magnolia

      &:active
        border-color color-purple-heart

      & .choices__item
        padding-left 27px

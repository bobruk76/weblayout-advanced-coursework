.search
    padding 14px 32px
    display flex
    align-items center

    font-weight 400
    font-size 16px
    line-height 120%
    background color-alabaster
    border-radius 10px 0 0 10px
    &__icon
      display flex
      align-items center
      margin-right 7px
      & > svg
        width 20px
        height 20px
    &__input
      border none
      outline none
      background-color transparent
      &::placeholder
        color color-dusty-gray
    &__btn
      margin-right 0
      margin-left auto
      & > svg
        width 32px
        height 32px


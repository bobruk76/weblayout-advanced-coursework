.footer
  grid-area footer

  &__top
    position relative

    &:after
      content ""
      position absolute
      z-index -1
      top 0
      right 0
      bottom 0
      left 0
      background-color color-gallery

  &__container
    padding-top 26px
    padding-bottom 24px

    display grid

    grid-template-columns repeat(2, auto)
    grid-column-gap 250px
    @media (max-width 1440px)
      grid-column-gap gap
    @media (max-width 900px)
      grid-template-columns 1fr
      grid-template-rows repeat(2, auto)
      grid-row-gap 24px

  &__left
    display inline-flex
    flex-direction column
    align-items flex-start
    justify-content space-between
    @media (max-width 900px)
      grid-row 1 / 2
      grid-column 1 / 2
      flex-direction row

  &__social
    &-items
      display inline-grid
      grid-template-columns repeat(3, auto)
      grid-gap 17px

    &-item
      position relative
      width 33px
      height 30px

      &-link.link
        position absolute
        z-index 1
        top 0
        right 0
        bottom 0
        left 3px
        color color-dusty-gray
        outline none
        transition color .3s ease-in-out

        &:after
          content ""
          position absolute
          z-index -1
          top -3px
          right -3px
          bottom -3px
          left -3px
          background-color transparent
          transition background-color .3s ease-in-out

        & path
          fill currentColor

        &:hover
          color color-medium-purple

        &:focus
          color color-bg

          &:after
            background-color color-mauve

        &:active
          color color-purple-heart

  &__cards
    display inline-grid
    grid-template-columns repeat(4, auto)
    grid-gap 130px
    @media (max-width 1440px)
      grid-gap 93px
    @media (max-width 900px)
      grid-row 2 / 3
      grid-column 1 / 2
      grid-gap 54px

  &__card
    display flex
    row-gap 10px
    flex-direction column
    align-items flex-start
    @media (max-width 900px)
      row-gap 8px

    &-link
      &.link
        font-weight 400
        font-size 14px
        line-height 100%
        color color-dusty-gray

      &-title
        &.link
          color color-mine-shaft

  &__bottom
    padding: 0
    display flex
    justify-content center

    &-info
      background linear-gradient(color-bg, color-bg)
      color color-dusty-gray
      font-weight 400
      font-size 14px
      line-height 19px
